<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myListItemConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MyListItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Name"
        android:textColor="#212B67"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemListAisle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="180dp"
        android:text="Aisle"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/MyListItemName"
        app:layout_constraintStart_toStartOf="@+id/MyListItemName"
        app:layout_constraintTop_toBottomOf="@+id/MyListItemName" />

    <TextView
        android:id="@+id/itemListCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:text="Cost"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/MyListItemName"
        app:layout_constraintStart_toEndOf="@+id/itemListAisle"
        app:layout_constraintTop_toBottomOf="@+id/MyListItemName" />
</androidx.constraintlayout.widget.ConstraintLayout>